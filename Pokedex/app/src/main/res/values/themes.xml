<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Pokedex" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#FF2222</item>
        <item name="colorPrimaryVariant">#CC0000</item>
        <item name="colorOnPrimary">#FFF</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#FFDE00</item>
        <item name="colorSecondaryVariant">#B3A125</item>
        <item name="colorOnSecondary">#3C3C3C</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="fontFamily">@font/kongtext</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Pokedex.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Pokedex.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Pokedex.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>